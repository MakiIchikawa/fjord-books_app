<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-expand-md navbar-light" style="background-color: #e3f2fd;">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item m-2">Logged in as <strong><%= current_user.email %></strong></li>
          <li class="nav-item m-2"><%= link_to Book.model_name.human, books_path, class: 'navbar-link' %></li>
          <li class="nav-item m-2"><%= link_to User.model_name.human, users_path, class: 'navbar-link' %></li>
          <li class="nav-item m-2"><%= link_to t('views.navbar.my_account'), user_path(current_user), class: 'navbar-link' %></li>
          <li class="nav-item m-2"><%= link_to t('views.navbar.log_out'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %></li>
        <% else %>
          <li class="nav-item m-2"><%= link_to t('views.navbar.sign_up'), new_user_registration_path, class: 'navbar-link'  %></li>
          <li class="nav-item m-2"><%= link_to t('views.navbar.log_in'), new_user_session_path, class: 'navbar-link'  %></li>
        <% end %>
          </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
