<h2> <%= Comment.model_name.human %> </h2>
  <table>
    <thead>
      <tr>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% comments.each do |comment| %>
        <tr>
          <td>
            <% created_by = comment.created_by%>
            <%= created_by.name.present? ? created_by.name : created_by.email %>
          </td>
          <td><%= comment.content %></td>
          <td><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          <% if current_user == created_by %>
            <td><%= link_to t('views.common.destroy'), polymorphic_url([*url, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<%= form_with model: comment ,url: polymorphic_url([*url, Comment]) do |form| %> 
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
